                <Grid HorizontalAlignment="Left" Height="558" VerticalAlignment="Top" Width="881" Margin="10,8,0,0">
                    <ListView x:Name="listCatalog" IsSynchronizedWithCurrentItem="True" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.HorizontalScrollBarVisibility="Disabled"  HorizontalAlignment="Center" Height="557" VerticalAlignment="Bottom" Width="881" Background="#FF09092C" BorderBrush="{x:Null}" Foreground="White" FontSize="18" SelectionChanged="listCatalog_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="BlanchedAlmond" />
                                <Setter Property="BorderThickness" Value="2" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                        <Setter Property="Background" Value="#FFC5F39D" />
                                    </Trigger>

                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle1}">
                                <GridViewColumn Header="Фото" Width="90">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <Image Width="70" Source="{Binding image}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Наличие" Width="120" DisplayMemberBinding="{Binding nalichie}" />
                                <GridViewColumn Header="Название" Width="170" DisplayMemberBinding="{Binding name}"/>
                                <GridViewColumn Header="Описание" Width="240" DisplayMemberBinding="{Binding opisanie}"/>
                                <GridViewColumn Header="Цена" Width="100" DisplayMemberBinding="{Binding costs}"/>
                                <GridViewColumn Header="Наличие рецепта" Width="140" DisplayMemberBinding="{Binding nalichie_retsepta}">
                                </GridViewColumn>
                            </GridView>
